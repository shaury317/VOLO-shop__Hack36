<%- include("./partials/header") %>
<style>
	.ftr{
		display: inline-block;
    position: absolute;
    top:780px;
    width: 100%;
    height: 50px;
    text-align: center;
    background-color: rgba(196, 159, 231, 0.893);
    color: rgb(244, 233, 233);
	}
</style>
	<section class="main-content">
		<div class="container">
			<h1 class="text-center">ShopKeeper Profile</h1>
			<br>
			<br>
			
			<div class="row">
				<div class="col-sm-8 offset-sm-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4">
					<div class="profile-card card rounded-lg shadow p-4 p-xl-5 mb-4 text-center position-relative overflow-hidden">
						<div class="banner"></div>
						<img src="/img/user1.png" alt="" class="img-circle mx-auto mb-3">
						<h3 class="mb-4"><%=locals.user%></h3>
						<div class="text-left mb-4">
							<p class="mb-2"><i class="fa fa-envelope mr-2"></i>Email - <%=locals.email%></p>
							<p class="mb-2"><i class="fa fa-phone mr-2"></i> Contact No - <%=locals.mobile%></p>
							<p class="mb-2"><i class="fa fa-globe mr-2"></i>Shop Name - <%=locals.user%>'s Shop</p>
							<p class="mb-2"><i class="fa fa-map-marker-alt mr-2"></i>Locality - <%=locals.locality%></p>
						</div>
						<div class="social-links d-flex justify-content-center">
							<a href="#!" class="mx-2"><img src="/img/social/dribbble.svg" alt="Dribbble"></a>
                            <a href="#!" class="mx-2"><img src="/img/social/facebook.svg" alt="Facebook"></a>
							<a href="#!" class="mx-2"><img src="/img/social/linkedin.svg" alt="Linkedin"></a>
							<a href="#!" class="mx-2"><img src="/img/social/youtube.svg" alt="Youtube"></a>
						</div>
					</div>
				</div>
			</div>

		</div>
	</section>
	
